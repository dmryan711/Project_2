


<div class="container">
    <div class="row row-school">
        <div id="div-school-logo" class="col-lg-2">
            <img src="/img/schools_logos/{{schoolData.logo}}" alt="">
        </div>
        <div class="col-lg-6">
            <h3 id="school-name">{{schoolData.school_name}}

            </h3>
        </div>
        <div class="col-lg-3">
            <h5>Address</h5>
            <p id="school-address">{{schoolData.school-address}}</p>
            <p><span id="school-city">{{schoolData.city}} </span><span id="school-state">{{schoolData.state}}, </span><span
                    id="school-zip">{{schoolData.zipcode}}</span></p>
            <p id="school-phone">Telephone: {{schoolData.phone}}</p>
            <p id="school-website">{{shoolData.website}}</p>
        </div>
    </div>
    <div class="row row-school">
        <div class="col-lg-9">
            <p id="school-description">{{schoolData.description}}</p>
            <p id="school-tuition">Tuition: ${{schoolData.tuition}}</p>

        </div>
    </div>

    <div class="row-school">
        <h4>Events</h4>
        <ul class="list-group results-list">
            {{#if events}}
            <li class="list-group-item row">
                <p class="event-name-list col-lg-7">{{events.event}}</p>
                <p class="event-date col-lg-2">{{events.date}}</p>
            </li>
            {{else}}
            <li class="list-group-item row">
                <p class="event-name-list col-lg-7">No Events</p>
                <p class="event-date col-lg-2"></p>
            </li>
            {{/if}}
        </ul>
    </div>
    <div class="row">
        <button class="btn btn-sm btn-dark add-btn col-lg-2">ADD TO FAVORITES</button>
    </div>

</div>
